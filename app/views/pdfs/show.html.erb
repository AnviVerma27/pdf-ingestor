<h1 style="color: #333; font-family: Arial, sans-serif; text-align: center; margin-bottom: 30px;"><%= @pdf.file_name %></h1>

<div style="max-width: 600px; margin: 0 auto; background-color: #f8f9fa; padding: 30px; border-radius: 5px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
    <h2 style="color: #555; font-family: Arial, sans-serif; margin-bottom: 20px;">Extracted Questions</h2>
    <ul style="list-style-type: none; padding: 0;">
        <% @questions.each do |question| %>
            <li style="background-color: #e9ecef; padding: 15px; border-radius: 5px; margin-bottom: 10px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
                <%= question.content %>
            </li>
        <% end %>
    </ul>

    <p style="text-align: center; margin-top: 30px;">
        <%= link_to 'Back to PDFs', pdfs_path, style: "color: #007bff; text-decoration: none;" %>
    </p>
</div>
