<h1>Upload PDF</h1>

<%= form_with url: questions_path, local: true, multipart: true do |form| %>
    <div>
        <%= form.label :pdf_file, "Select PDF file:" %>
        <%= form.file_field :pdf_file %>
    </div>
    <div>
        <%= form.submit "Upload" %>
    </div>
<% end %>

<%= link_to 'Back to Questions', questions_path %>
